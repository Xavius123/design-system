{
  "name": "react-lib",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "react-lib/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project react-lib --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "build/react-lib"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/react-lib"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 6006,
        "configDir": "react-lib/.storybook"
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "build/storybook/react",
        "configDir": "react-lib/.storybook"
      }
    }
  }
}
