{
  "name": "design-system",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:token": "node scripts/build-tokens.js",
    "validate:tokens": "node scripts/validate-tokens.js",
    "build": "npm run build:token && npm run build --workspace=packages/react-ui",
    "storybook": "npm run storybook --workspace=packages/react-ui",
    "build-storybook": "npm run build-storybook --workspace=packages/react-ui",
    "format": "prettier --write \"**/*.{js,jsx,css,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,css,json,md}\" --ignore-path .gitignore",
    "lint": "npm run lint --workspace=packages/react-ui",
    "lint:fix": "npm run lint:fix --workspace=packages/react-ui"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "style-dictionary": "^5.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Toyota-branded design system monorepo"
}
