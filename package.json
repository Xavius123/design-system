{
  "name": "design-system",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "source/*",
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build:tokens": "node scripts/build-tokens.js",
    "build:mitosis": "npm run build --workspace=source/redhorn-components && node scripts/copy-css-modules.js",
    "build:all": "npm run build:tokens && npm run build:mitosis",
    "validate:tokens": "node scripts/validate-tokens.js",
    "storybook": "npm run storybook --workspace=packages/react",
    "build-storybook": "npm run build-storybook --workspace=packages/react",
    "lint": "eslint \"source/**/*.{ts,tsx,js,jsx}\" \"scripts/**/*.js\" \"packages/react/stories/**/*.{js,jsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,json,md}\" --ignore-path .gitignore",
    "typecheck": "tsc --noEmit",
    "quality": "npm run lint && npm run format:check && npm run typecheck",
    "generate:component": "node scripts/generate-component.js",
    "publish:tokens": "npm publish --workspace=packages/tokens",
    "publish:react": "npm publish --workspace=packages/react",
    "publish:angular": "npm publish --workspace=packages/angular",
    "publish:react-native": "npm publish --workspace=packages/react-native",
    "publish:vue": "npm publish --workspace=packages/vue",
    "publish:all": "npm run publish:tokens && npm run publish:react && npm run publish:angular && npm run publish:react-native && npm run publish:vue",
    "version": "changeset version",
    "release": "npm run build:all && npm run publish:all"
  },
  "devDependencies": {
    "@builder.io/mitosis": "^0.13.0",
    "@builder.io/mitosis-cli": "^0.13.0",
    "@changesets/cli": "^2.29.8",
    "@esbuild/win32-x64": "^0.27.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.25.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.6.2",
    "style-dictionary": "^5.0.0",
    "typescript": "^5.9.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Redhorn design system monorepo"
}
