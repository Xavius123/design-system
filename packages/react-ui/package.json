{
  "name": "@your-org/react-ui",
  "version": "1.0.0",
  "description": "Toyota-branded React UI components built with Radix UI and CSS Modules",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/index.css",
    "./tokens/light": "@toyota/design-tokens/css/light",
    "./tokens/dark": "@toyota/design-tokens/css/dark",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css",
    "dist/index.css"
  ],
  "scripts": {
    "prebuild": "node ../../scripts/validate-tokens.js",
    "build": "vite build",
    "build:storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,json}\"",
    "analyze": "vite build --mode analyze",
    "size-check": "npm run build && node scripts/check-bundle-size.js"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "ui",
    "toyota",
    "radix-ui",
    "css-modules"
  ],
  "author": "Toyota Design System Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/toyota/design-system.git",
    "directory": "packages/react-ui"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@toyota/core": "file:../core",
    "@toyota/design-tokens": "file:../tokens",
    "prop-types": "^15.8.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-measure": "^8.4.7",
    "@storybook/addon-outline": "^8.4.7",
    "@storybook/addon-themes": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "chromatic": "^11.0.0",
    "typescript": "^5.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.4.7",
    "vite": "^6.0.0",
    "vite-bundle-visualizer": "^0.10.0",
    "vite-plugin-dts": "^4.5.0"
  }
}
